print("VÃ¼cut kitle index'iniz {}".format(round(vki,2)))
print("Durumunuz: ")
if vki <=18.5:
    print("ZayÄ±f")
    print("{} kilogram almanÄ±z gerekiyor".format(round(18.5((boy/100)2)-kilo,2)))
elif vki <=24.9:
    print("Normal")
elif vki<=29.9:
    print("Fazla kilolu")
    print("{} kilogram vermeniz gerekiyor".format(round(kilo-24.9*((boy / 100)  2)),2))
elif vki<=39.9:
    print("Obez")
    print("{} kilogram vermeniz gerekiyor".format(round(kilo - 24.9 * ((boy / 100)  2)), 2))
else:
    print("AÅŸÄ±rÄ± obez")
    print("{} kilogram vermeniz gerekiyor".format(round(kilo - 24.9 * ((boy / 100)  2)), 2))

